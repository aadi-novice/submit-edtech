# Django Production Environment Variables for Render.com
# Copy this file and fill in the actual values

# Django Configuration
DJANGO_SECRET_KEY=your-very-long-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-render-app.onrender.com

# Database Configuration (PostgreSQL on Render)
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=5432

# Frontend Configuration
FRONTEND_URL=https://your-netlify-app.netlify.app
NETLIFY_URL=https://your-netlify-app.netlify.app

# Supabase Configuration (if using Supabase for file storage)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key
SUPABASE_BUCKET=courses
